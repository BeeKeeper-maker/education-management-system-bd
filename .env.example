# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/edupro

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
